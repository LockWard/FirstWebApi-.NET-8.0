<?xml version="1.0" encoding="utf-8" ?>
<log4net xmlns="urn:log4net">
  <!-- Define where to log -->
  <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="../../../Logs/log-" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />
    <datePattern value="yyyy-MM-dd&quot;.log&quot;" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="10MB" />
    <staticLogFileName value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[DATE=%date] [THREAD=%thread] [LEVEL=%level] [IP=%property{ip}] [OS=%property{os}] [UA=%property{userAgent}] [PATH=%property{path}] [HTTP=%property{http}] [STATUS=%property{statusCode}] [DURATION=%property{duration}ms] - %message%newline" />
    </layout>
  </appender>

  <!-- Root logger -->
  <root>
    <level value="ALL" />
    <appender-ref ref="RollingFileAppender" />
  </root>
</log4net>
